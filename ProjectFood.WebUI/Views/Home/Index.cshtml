@model List<ProjectFood.Domain.Entities.Recipe>

@{
    ViewBag.Title = "ProjectFood - Homepage";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="first-slide" src="@Url.Action("GetImage", "Recipe", new { Model[0].RecipeId })" alt="First slide" onclick="location.href='@Url.Action("Details", "Recipe", new { id = (int?)Model[0].RecipeId })';return false;">
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Model[0].RecipeName</h1>
                    <p>@Model[0].RecipeDescription</p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="second-slide" src="@Url.Action("GetImage", "Recipe", new {Model[1].RecipeId })" alt="Second slide" onclick="location.href='@Url.Action("Details", "Recipe", new { id = (int?)Model[1].RecipeId })';return false;">
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Model[1].RecipeName</h1>
                    <p>@Model[1].RecipeDescription</p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="third-slide" src="@Url.Action("GetImage", "Recipe", new {Model[2].RecipeId })" alt="Third slide" onclick="location.href='@Url.Action("Details", "Recipe", new { id = (int?)Model[2].RecipeId })' ;return false;">
            <div class="container">
                <div class="carousel-caption">
                    <h1>@Model[2].RecipeName</h1>
                    <p>@Model[2].RecipeDescription</p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><!-- /.carousel -->

<!-- START THE FEATURETTES -->

<hr class="featurette-divider">

<div class="row featurette">
    <div class="col-md-7">
        <h2 class="featurette-heading">@Model[0].RecipeName <span class="text-muted">It'll blow your mind.</span></h2>
        <p class="lead">@Model[0].RecipeDescription</p>
    </div>
    <div class="col-md-5">
        <a href="@Url.Action("Details", "Recipe", new {id = (int?) Model[0].RecipeId})">
        <img class="featurette-image img-responsive center-block" src="@Url.Action("GetImage", "Recipe", new {recipeId = Model[0].RecipeId})">
            </a>
    </div>
</div>

<hr class="featurette-divider">

<div class="row featurette">
    <div class="col-md-7 col-md-push-5">
        <h2 class="featurette-heading">@Model[1].RecipeName <span class="text-muted">See for yourself.</span></h2>
        <p class="lead">@Model[1].RecipeDescription</p>
    </div>
    <div class="col-md-5 col-md-pull-7">
        <a href="@Url.Action("Details", "Recipe", new {id = (int?) Model[1].RecipeId})">
            <img class="featurette-image img-responsive center-block" src="@Url.Action("GetImage", "Recipe", new {Model[1].RecipeId})">
        </a>
    </div>
</div>

<hr class="featurette-divider">

<div class="row featurette">
    <div class="col-md-7">
        <h2 class="featurette-heading">@Model[2].RecipeName <span class="text-muted">Checkmate.</span></h2>
        <p class="lead">@Model[2].RecipeDescription</p>
    </div>
    <div class="col-md-5">
        <a href="@Url.Action("Details", "Recipe", new {id = (int?) Model[2].RecipeId})">
            <img class="featurette-image img-responsive center-block" src="@Url.Action("GetImage", "Recipe", new {Model[2].RecipeId})">
        </a>
    </div>
</div>

<hr class="featurette-divider">

<!-- /END THE FEATURETTES -->