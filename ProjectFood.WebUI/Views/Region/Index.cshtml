@model IEnumerable<ProjectFood.Domain.Entities.Region>

@{
    ViewBag.Title = "Regions";
}

<h2>Regions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.RegionName, "Index", "Recipe", new { regionId = item.RegionId }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegionId })
        </td>
    </tr>
}

</table>
