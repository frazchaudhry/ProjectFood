@model List<ProjectFood.Domain.Entities.Recipe>

@{
    ViewBag.Title = "Recipe List";
}
<link href="~/Content/css/Recipe/Index.css" rel="stylesheet" />
<h2>Recipe List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
